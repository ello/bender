{
  "name": "NativeApp",
  "version": "0.1.0",
  "private": true,
  "rnpm": {
    "android": {
      "mainFilePath": "src/main/java/co/ello/ElloApp/Dagger/ElloApp.java"
    }
  },
  "babel": {
    "presets": [
      "flow"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "globals": {
      "AndroidInterface": false,
      "ENV": false
    },
    "rules": {
      "jsx-a11y/tabindex-no-positive": 0,
      "no-alert": 2,
      "no-console": 2,
      "no-debugger": 2,
      "react/forbid-prop-types": [
        1,
        {
          "forbid": [
            "any"
          ]
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/prefer-stateless-function": [
        2,
        {
          "ignorePureComponents": true
        }
      ],
      "react/sort-comp": [
        "error",
        {
          "order": [
            "type-annotations",
            "static-methods",
            "lifecycle",
            "/^on.+$/",
            "/^(get|set)(?!(InitialState$|DefaultProps$|ChildContext$)).+$/",
            "everything-else",
            "/^render.+$/",
            "render"
          ]
        }
      ],
      "semi": 0
    }
  },
  "scripts": {
    "start": "react-native start",
    "flow": "flow",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "node node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "exif-js": "2.1.1",
    "humps": "2.0.0",
    "immutable": "3.8.1",
    "jwt-decode": "2.2.0",
    "lodash": "4.17.4",
    "react": "15.4.2",
    "react-native": "0.42.3",
    "react-native-config": "0.3.1",
    "react-native-dialog": "1.0.7",
    "react-native-image-picker": "0.26.2",
    "react-native-svg": "5.1.7",
    "react-redux": "5.0.3",
    "react-router-redux": "4.0.8",
    "redux": "3.6.0",
    "redux-logger": "3.0.0",
    "redux-persist": "4.0.0",
    "redux-persist-transform-immutable": "4.1.1",
    "redux-saga": "0.14.3",
    "reselect": "3.0.0",
    "trunc-html": "1.1.2",
    "url-regex": "3.2.0"
  },
  "devDependencies": {
    "babel-eslint": "7.2.1",
    "babel-preset-flow": "6.23.0",
    "eslint": "3.18.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.10.3",
    "flow-bin": "0.43.1",
    "jest-expo": "0.3.1",
    "react-test-renderer": "15.4.0"
  }
}
