{
  "name": "NativeApp",
  "version": "0.1.0",
  "private": true,
  "rnpm": {
    "android": {
      "mainFilePath": "src/main/java/co/ello/ElloApp/Dagger/ElloApp.java"
    }
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "react-native"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "ello",
    "globals": {
      "AndroidInterface": false,
      "ENV": false,
      "expect": true
    }
  },
  "scripts": {
    "android": "react-native run-android",
    "flow": "flow",
    "install:debug": "adb install android/app/build/outputs/apk/app-debug.apk",
    "install:release": "adb install android/app/build/outputs/apk/app-release.apk",
    "ios": "react-native run-ios",
    "lint": "eslint ./src",
    "mrclean": "rm -rf $TMPDIR/react* && rm -rf node_modules/ && yarn",
    "release": "yes | cp -rf .env.prod .env && cd android/ && ./gradlew assembleRelease && cd ../",
    "start": "react-native start",
    "test": "NODE_ENV=test node node_modules/jest/bin/jest.js",
    "test:watch": "NODE_ENV=test node node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "preset": "react-native",
    "setupTestFrameworkScriptFile": "./tests_setup.js"
  },
  "dependencies": {
    "analytics-react-native": "1.1.0",
    "chai": "3.5.0",
    "exif-js": "2.2.1",
    "humps": "2.0.0",
    "immutable": "3.8.1",
    "jwt-decode": "2.2.0",
    "lodash": "4.17.4",
    "react": "15.4.2",
    "react-native": "0.42.3",
    "react-native-config": "0.3.1",
    "react-native-image-picker": "0.26.3",
    "react-native-svg": "5.1.7",
    "react-native-vector-icons": "4.1.1",
    "react-redux": "5.0.4",
    "react-router-redux": "4.0.8",
    "redux": "3.6.0",
    "redux-logger": "3.0.1",
    "redux-persist": "4.6.0",
    "redux-persist-transform-immutable": "4.2.0",
    "redux-saga": "0.14.7",
    "reselect": "3.0.0",
    "trunc-html": "1.1.2",
    "url-regex": "3.2.0"
  },
  "devDependencies": {
    "babel-eslint": "7.2.2",
    "babel-jest": "19.0.0",
    "babel-preset-react-native": "1.9.1",
    "eslint": "3.19.0",
    "eslint-config-ello": "1.0.3",
    "flow-bin": "0.44.2",
    "jest": "19.0.2",
    "react-test-renderer": "15.4.0"
  }
}
